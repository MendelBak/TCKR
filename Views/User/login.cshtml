@model tckr.Models.LoginViewModel

<h1>Welcome To TCKR: A Place For Financial Information and Chewing BubbleGum.</h1>
<h3>We're All Out Of BubbleGum.</h3>

<h1>Login</h1>

<form asp-controller="User" asp-action="LoginSubmit" method="post" class="form-group">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" placeholder="Email Address" class="form-control"> 
    <span asp-validation-for="Email"></span>

    <br><br>

    <label asp-for="Password">Password</label>
    <input asp-for="Password" placeholder="Password" class="form-control"> 
    <span asp-validation-for="Password"></span>

    <p>@ViewBag.loginError</p>
    <br><br>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/">Back To Registration.</a>
</form>
